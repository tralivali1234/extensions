@using Signum.Entities.Disconnected

@using (var dc = Html.TypeContext<DisconnectedImportEntity>())
{
    @Html.ValueLine(dc, d => d.CreationDate)
    @Html.EntityLine(dc, d => d.Machine)
    @Html.ValueLine(dc, d => d.State)
    @Html.ValueLine(dc, d => d.RestoreDatabase)
    @Html.ValueLine(dc, d => d.SynchronizeSchema)
    @Html.ValueLine(dc, d => d.DisableForeignKeys)
    <fieldset>
        <legend>@Html.PropertyNiceName(() => dc.Value.Copies)</legend>
        <div class="form-vertical">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <td>@Html.PropertyNiceName((DisconnectedImportTableEmbedded de) => de.Type)</td>
                        <td>@Html.PropertyNiceName((DisconnectedImportTableEmbedded de) => de.CopyTable)</td>
                        <td>@Html.PropertyNiceName((DisconnectedImportTableEmbedded de) => de.InsertedRows)</td>
                        <td>@Html.PropertyNiceName((DisconnectedImportTableEmbedded de) => de.UpdatedRows)</td>
                    </tr>
                </thead>
                @foreach (var dtc in dc.TypeElementContext(a => a.Copies))
                {
                    dtc.FormGroupStyle = FormGroupStyle.SrOnly;
                    <tr>
                        <td>
                            @Html.EntityLine(dtc, d => d.Type)
                        </td>
                        <td>
                            @Html.ValueLine(dtc, d => d.CopyTable)
                        </td>
                        <td>
                            @Html.ValueLine(dtc, d => d.InsertedRows)
                        </td>
                        <td>
                            @Html.ValueLine(dtc, d => d.UpdatedRows)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </fieldset>
    @Html.ValueLine(dc, d => d.Unlock)
    @Html.ValueLine(dc, d => d.EnableForeignKeys)
    @Html.ValueLine(dc, d => d.DropDatabase)
    @Html.ValueLine(dc, d => d.Total)

    @Html.EntityLine(dc, d => d.Exception)
}
